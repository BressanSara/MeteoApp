    .about-container {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
    }

    .info-section {
        margin: 20px 0;
        padding: 15px;
        background-color: #f5f5f5;
        border-radius: 8px;
    }

    h1 {
        color: #2196F3;
        text-align: center;
        margin-bottom: 30px;
    }

    h2 {
        color: #333;
        margin-bottom: 15px;
    }

