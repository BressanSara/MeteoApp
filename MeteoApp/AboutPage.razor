@page "/about"
@using MeteoApp.Services
@inject AppInfoService AppInfo

<div class="about-container">
    <h1>About MeteoApp</h1>
    
    <div class="info-section">
        <h2>Application Information</h2>
        <p><strong>Version:</strong> @AppInfo.Version</p>
        <p><strong>Build:</strong> @AppInfo.BuildNumber</p>
        <p><strong>Name:</strong> @AppInfo.AppName</p>
        <p><strong>Last Build:</strong> @AppInfo.LastBuildDate</p>
        <p><strong>Description:</strong> A weather application that helps you track weather conditions for multiple locations.</p>
    </div>

    <div class="info-section">
        <h2>Authors</h2>
        <p>Developed by Sara Bressan and Alessandro Formato</p>
        <h2>Info</h2>
        <p>This app was developed as a project for the course "Sviluppo di applicazioni 'mobile'" at SUPSI</p>
    </div>

    <div class="info-section">
        <h2>Features</h2>
        <ul>
            <li>Real-time weather updates</li>
            <li>Multiple location tracking</li>
            <li>Weather notifications</li>
            <li>Interactive map view</li>
        </ul>
    </div>
</div>

