<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MeteoApp.ViewModels;assembly=MeteoApp"
             x:Class="MeteoApp.LocationDetailsView"
             x:DataType="local:LocationDetailsViewModel"
             Title="{Binding MeteoLocation.Name}"
             BackgroundColor="#F0F8FF">
    <ScrollView>
        <StackLayout Padding="15" Spacing="15">
            <!-- Weather Icon and Description Card -->
            <Border Stroke="#4CAF50" StrokeShape="RoundRectangle 20" BackgroundColor="#E8F5E9" Padding="12">
                <StackLayout HorizontalOptions="Center" Spacing="10">
                    <Frame BackgroundColor="White" 
                           BorderColor="#4CAF50" 
                           CornerRadius="15" 
                           Padding="8"
                           HasShadow="True">
                        <Image Source="{Binding IconString}" 
                               WidthRequest="120" 
                               HeightRequest="120" />
                    </Frame>
                    <Label Text="{Binding CurrentWeatherData.Weather[0].Description}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Border>

            <!-- Temperature Card -->
            <Border Stroke="#2196F3" StrokeShape="RoundRectangle 20" BackgroundColor="#E3F2FD" Padding="12">
                <StackLayout Spacing="10">
                    <Label Text="🌡️ Temperature Details" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#1565C0"
                           HorizontalOptions="Center" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" Padding="8">
                        <Label Text="Temperature:" 
                               Grid.Row="0" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#1976D2" />
                        <Label Text="{Binding CurrentWeatherData.Main.Temp, StringFormat='{0}°C'}" 
                               Grid.Row="0" Grid.Column="1"
                               FontSize="14"
                               TextColor="#1976D2"
                               HorizontalOptions="End" />
                        
                        <Label Text="Feels Like:" 
                               Grid.Row="1" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#1976D2" />
                        <Label Text="{Binding CurrentWeatherData.Main.FeelsLike, StringFormat='{0}°C'}" 
                               Grid.Row="1" Grid.Column="1"
                               FontSize="14"
                               TextColor="#1976D2"
                               HorizontalOptions="End" />
                        
                        <Label Text="Humidity:" 
                               Grid.Row="2" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#1976D2" />
                        <Label Text="{Binding CurrentWeatherData.Main.Humidity, StringFormat='{0}%'}" 
                               Grid.Row="2" Grid.Column="1"
                               FontSize="14"
                               TextColor="#1976D2"
                               HorizontalOptions="End" />
                    </Grid>
                </StackLayout>
            </Border>

            <!-- Wind Card -->
            <Border Stroke="#FF9800" StrokeShape="RoundRectangle 20" BackgroundColor="#FFF3E0" Padding="12">
                <StackLayout Spacing="10">
                    <Label Text="💨 Wind Information" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#E65100"
                           HorizontalOptions="Center" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="8">
                        <Label Text="Wind Speed:" 
                               Grid.Row="0" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#F57C00" />
                        <Label Text="{Binding CurrentWeatherData.Wind.Speed, StringFormat='{0} m/s'}" 
                               Grid.Row="0" Grid.Column="1"
                               FontSize="14"
                               TextColor="#F57C00"
                               HorizontalOptions="End" />
                        
                        <Label Text="Wind Direction:" 
                               Grid.Row="1" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#F57C00" />
                        <Label Text="{Binding CurrentWeatherData.Wind.Deg, StringFormat='{0}°'}" 
                               Grid.Row="1" Grid.Column="1"
                               FontSize="14"
                               TextColor="#F57C00"
                               HorizontalOptions="End" />
                    </Grid>
                </StackLayout>
            </Border>

            <!-- Coordinates Card -->
            <Border Stroke="#795548" StrokeShape="RoundRectangle 20" BackgroundColor="#EFEBE9" Padding="12">
                <StackLayout Spacing="10">
                    <Label Text="📍 Location Coordinates" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#4E342E"
                           HorizontalOptions="Center" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="8">
                        <Label Text="Latitude:" 
                               Grid.Row="0" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#5D4037" />
                        <Label Text="{Binding MeteoLocation.Latitude, StringFormat='{0}°'}" 
                               Grid.Row="0" Grid.Column="1"
                               FontSize="14"
                               TextColor="#5D4037"
                               HorizontalOptions="End" />
                        
                        <Label Text="Longitude:" 
                               Grid.Row="1" Grid.Column="0"
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#5D4037" />
                        <Label Text="{Binding MeteoLocation.Longitude, StringFormat='{0}°'}" 
                               Grid.Row="1" Grid.Column="1"
                               FontSize="14"
                               TextColor="#5D4037"
                               HorizontalOptions="End" />
                    </Grid>
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
